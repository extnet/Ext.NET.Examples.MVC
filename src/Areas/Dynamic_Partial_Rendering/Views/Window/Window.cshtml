@(Html.X().Window()
    .Width(200)
    .Height(200)
    .Icon(Icon.Clock)
    .Title("Server Time")
    .Padding(10)
    .X(new Random().Next(300))
    .Y(new Random().Next(300))
    .CloseAction(CloseAction.Destroy)
    .TopBar(Html.X().Toolbar().Items(
        Html.X().Button().Text("Button").Icon(Icon.BellAdd).UI(UI.Danger)
    ))
    .Html(DateTime.Now.ToLongTimeString())
)